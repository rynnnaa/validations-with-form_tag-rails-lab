<h2>Editing </h2>
<%= form_tag post_path(@post), method: "patch" do %>
<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |m| %>
      <li><%= m %></li>
      <% end %>
      </ul>
    </div >
  <% end %>

<% if @post.errors[:title].any? %>
  <div class="field_with_errors">
  <% else %>
  <div class="field">
  <% end %>
    <%= label_tag "title", "title" %>
    <%= text_field_tag "title", @post.title %>
  </div>

<% if @post.errors[:content].any? %>
  <div class="field_with_errors">
  <% else %>
  <div class="field">
  <% end %>

    <%= label_tag "contaent", "content" %>
    <%= text_field_tag "content", @post.content %>
  </div>

<% if @post.errors[:category].any? %>
  <div class="field_with_errors">
  <% else %>
  <div class="field">
  <% end %>

    <%= label_tag "category", "Category" %>
    <%= text_field_tag "category", @post.category %>
  </div>

  <%= submit_tag "Update" %>
<% end %>
